<Page
    x:Class="Function.Views.Pages.DashboardPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Function.Views.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="DashboardPage"
    d:DataContext="{d:DesignInstance local:DashboardPage,
                                     IsDesignTimeCreatable=False}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
    ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    mc:Ignorable="d"
    
    >

    <Grid VerticalAlignment="Top">
        
        <TabControl Margin="0,8,0,0" Background="Gray">
            <TabItem>
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <ui:SymbolIcon Margin="0,0,6,0" Symbol="XboxConsole24" />
                        <TextBlock Text="日常办公" />
                    </StackPanel>
                </TabItem.Header>

                <ui:ListView
                
                 d:ItemsSource="{d:SampleData ItemCount=1}"
                 ItemsSource="{Binding ViewModel.BasicListViewItems, Mode=TwoWay}"
                 SelectedIndex="2"
                 SelectionMode="Single">
                    <ui:ListView.ItemTemplate>
                        <DataTemplate >
                            <TextBlock Margin="8,4" Text="{Binding AppName}" />
                            
                        </DataTemplate>
                    </ui:ListView.ItemTemplate>
                </ui:ListView>


            </TabItem>
            <TabItem>
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <ui:SymbolIcon Margin="0,0,6,0" Symbol="XboxConsole24" />
                        <TextBlock Text="网络调试" />
                    </StackPanel>
                </TabItem.Header>
                
                    <ui:ListView
                            
                             d:ItemsSource="{d:SampleData ItemCount=2}"
                             ItemsSource="{Binding ViewModel.BasicListViewItems, Mode=TwoWay}"
                             SelectedIndex="2"
                             SelectionMode="Single">    
                        <ui:ListView.ItemTemplate>
                            <DataTemplate >
                                <TextBlock Margin="8,4" Text="{Binding AppName}" />
                                
                            </DataTemplate>
                        </ui:ListView.ItemTemplate>
                    </ui:ListView>

               
            </TabItem>
            <TabItem >
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <ui:SymbolIcon Margin="0,0,6,0" Symbol="StoreMicrosoft16" />
                        <TextBlock Text="电气调试" />
                    </StackPanel>
                </TabItem.Header>
                <Grid>
                    <TextBlock Margin="12" Text="Is a lie." />
                </Grid>
            </TabItem>
        </TabControl>
        <!--<ui:Button
            Grid.Column="0"
            Command="{Binding ViewModel.ShowIncrementCommand, Mode=OneWay}"
            Content="Click me!"
            Icon="Fluent24" />
        <TextBlock
            Grid.Column="1"
            Margin="12,0,0,0"
            VerticalAlignment="Center"
            Text="{Binding ViewModel.Counter, Mode=OneWay}" />-->


    </Grid>
</Page>
